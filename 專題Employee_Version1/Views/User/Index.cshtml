@{
    ViewBag.Title = "Weather Map";
}

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .news-container {
            display: flex;
            overflow-x: auto;
        }

        .news-item {
            min-width: 300px;
            margin: 0 15px;
        }

        .cat-image-container {
            max-width: 500px;
            margin: 20px auto;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .cat-image-container img {
                display: block;
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .card {
            margin-top: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: invert(50%);
        }
    </style>
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">今日新聞</h1>
            <div id="newsCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @if (ViewBag.Articles != null && ViewBag.Articles.Count > 0)
                    {
                        int totalArticles = ViewBag.Articles.Count;
                        int itemsPerSlide = 3;
                        int slideCount = (int)Math.Ceiling((double)totalArticles / itemsPerSlide);

                        for (int i = 0; i < slideCount; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="row">
                                    @for (int j = i * itemsPerSlide; j < Math.Min((i + 1) * itemsPerSlide, totalArticles); j++)
                                    {
                                        var article = ViewBag.Articles[j];
                                        <div class="col-md-4">
                                            <div class="news-item">
                                                <a href="@article.Url" target="_blank">@article.Title</a>
                                                <p>@article.Description</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>

                <a class="carousel-control-prev" href="#newsCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#newsCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4>Taiwan</h4>
            <div id="clock1"></div>
        </div>
        <div class="col-md-4">
            <h4>New York</h4>
            <div id="clock2"></div>
        </div>
        <div class="col-md-4">
            <h4>Tokyo</h4>
            <div id="clock3"></div>
        </div>
    </div>




    <div class="cat-image-container">
        <div>來張貓貓圖片吧!</div>
        <img src="@ViewBag.CatImage" alt="Cat Image">
    </div>

    <p class="mt-4 text-center">
        <i class="far fa-kiss-wink-heart">
            Have Fun! : @ViewBag.joke
        </i>
    </p>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/assets/jquery.thooClock.min.js"></script>
    <script>
        // Create the first clock (local time)
        $(document).ready(function () {
            // thooClock初始化
            $('#clock1').thooClock({
                sweepingSeconds: true,
            });

            // 第二個時鐘，例如紐約時間
            $('#clock2').thooClock({
                timeCorrection: {
                    operator: '-',
                    hours: 12,
                    minutes: 0,

                },
                sweepingSeconds: true,
            });

            // 第三個時鐘，例如東京時間
            $('#clock3').thooClock({
                timeCorrection: {
                    operator: '+',
                    hours: 1,
                    minutes: 0
                },
                sweepingSeconds: true,
            });
        });


    </script>

}
