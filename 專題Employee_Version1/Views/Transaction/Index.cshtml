@model IEnumerable<專題Employee_Version1.Models.Transaction>

@{
    ViewBag.Title = "本週交易概況";
}

<div class="container">
    <h2 class="my-4">@ViewBag.Title</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <h4 class="text-muted">日期範圍: @ViewBag.StartDate - @ViewBag.currentDate</h4>
        </div>
        <div class="col-md-6 text-end">
            <div class="alert alert-primary">
                <p class="mb-0">
                    <strong>本週交易次數:</strong> @(ViewBag.totalTransaction/2)<br />
                    <strong>本週交易總金額:</strong> @((ViewBag.totalAmount/2).ToString("N0")) 元
                </p>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">帳戶號碼</th>
                <th scope="col">交易日期</th>
                <th scope="col">交易類型</th>
                <th scope="col">金額</th>
                <th scope="col">交易後餘額</th>
                <th scope="col">描述</th>
                <th scope="col">互動帳號</th>
                @*<th scope="col">操作</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Account.AccountNumber</td>
                    <td>@item.TransactionDate.ToString("yyyy-MM-dd")</td>
                    <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
                    <td>@item.Amount.ToString("N0")</td>
                    <td>@item.BalanceAfterTransaction.ToString("N0")</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.InteractiveAccountNumber)</td>
                    @*<td>
                        @Html.ActionLink("詳細資料", "Details", new { id = item.TransactionID }, new { @class = "btn btn-info btn-sm" })
                    </td>*@
                    </tr>
                    }
                    </tbody>
                    </table>

                    <div class="row mt-4">
                        <div class="col text-end">
                            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "User")'">回到首頁</button>
                        </div>
                    </div>
</div>
